[Unit]
Description=VM Usage API Service
After=network.target

[Service]
ExecStart=/usr/local/lib/vm_monitor/vm_monitor_api.py --config /etc/vm_monitor_client/config.yaml
Restart=always
User=ubuntu
Group=ubuntu
WorkingDirectory=/var/log/vm-usage-monitor
StandardOutput=append:/var/log/vm-usage-monitor/api.log
StandardError=append:/var/log/vm-usage-monitor/api.log

[Install]
WantedBy=multi-user.target