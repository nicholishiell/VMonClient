[Unit]
Description=VM Usage Monitoring Service
After=network.target

[Service]
ExecStart=/usr/local/lib/vm_monitor/vm_monitor_client --config /etc/vm_monitor_client/config.yaml
Restart=always
User=ubuntu
Group=ubuntu
WorkingDirectory=/var/log/vm_monitor_client
StandardOutput=append:/var/log/vm_monitor_client/monitor.log
StandardError=append:/var/log/vm_monitor_client/monitor.log

[Install]
WantedBy=multi-user.target